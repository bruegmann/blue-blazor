}
<AutoComplete Label="Select tag"
              Placeholder="Enter something..."
              @bind-Tags="@tags"
              Suggestions="@suggestions"
              SingleTag="true" />

Value ID is: @tags.FirstOrDefault()?.Id
<br />
Value description is: @tags.FirstOrDefault()?.Description

@code {
    List<AutoComplete.AutoCompleteItem> tags = new() { new() { Description = "Bla" } };
    List<AutoComplete.AutoCompleteItem> suggestions { get; set; } = new() {
        new () { Id = "csharp", Description = "C#" },
        new () { Id = "jsx", Description = "JSX" },
        new () { Id = "react", Description = "React" },
        new () { Id = "blazor", Description = "Blazor" }
    };
}
