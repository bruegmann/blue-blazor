<Button Label="No icon" />

<Button Label="Let's have an icon">
    <IconBefore>
        <BiBox2Heart />
    </IconBefore>
</Button>

<Button Label="Animate on hover" Class="icon-link-hover">
    <IconAfter>
        <BiArrowRight />
    </IconAfter>
</Button>

<Button Label="Custom hover transform" Class="icon-link-hover" style="--bs-icon-link-transform: translate3d(0, -.125rem, 0);">
    <IconBefore>
        <BiClipboard />
    </IconBefore>
</Button>

<Button Label="Emoji as icon" Class="icon-link-hover">
    <IconAfter>
        <span>➡️</span>
    </IconAfter>
</Button>