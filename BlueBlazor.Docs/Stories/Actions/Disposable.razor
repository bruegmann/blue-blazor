@if (_show)
{
    <div style="@($"width: {Width}px")">
        <Actions>
            <MenuItem Label="Child 1">
                <IconBefore>🌍</IconBefore>
            </MenuItem>

            <MenuItem Label="Child 2">
                <IconBefore>🌑</IconBefore>
            </MenuItem>

            <MenuItem Label="Child 3">
                <IconBefore>☀️</IconBefore>
            </MenuItem>

            <MenuItem Label="Child 4">
                <IconBefore>🚀</IconBefore>
            </MenuItem>

            <MenuItem Label="Child 5">
                <IconBefore>🌌</IconBefore>
            </MenuItem>
        </Actions>
    </div>
}

<Button Label="Toggle" OnClick="() => { _show = !_show; }" />

<label class="mt-3">
    <span class="form-label">Change width</span>
    <input type="range" class="form-range" min="100" max="1200" @bind="Width" @bind:event="oninput" /> @Width
</label>

@code {
    private bool _show = true;
    private string Width { get; set; } = "260";
}
