@using BlueBlazor.Components.LayoutParts
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<BlueBlazor.Resources.Phrases> L

<PageScript Src="./_content/BlueBlazor/Components/Layout.razor.js"></PageScript>

<div class="blue-layout">
    <input id="layout-expand"
           type="checkbox"
           class="blue-layout-state blue-layout-state-expand"
           checked />
    <label class="blue-layout-toggle blue-layout-toggle-expand" for="layout-expand" title="@L["ToggleSidebar"]" role="button">
        <span class="btn blue-menu-item w-100 h-100 d-flex align-items-center justify-content-center p-0">
            <svg xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 16 16"
                 aria-hidden="true"
                 tabindex="-1"
                 width="1em"
                 height="1em"
                 fill="currentColor"
                 class="bi bi-layout-sidebar">
                <path tabindex="-1" d="M0 3a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm5-1v12h9a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1zM4 2H2a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h2z"></path>
            </svg>
        </span>
    </label>

    <input id="layout-drawer" type="checkbox" class="blue-layout-state blue-layout-state-drawer" />
    <label class="blue-layout-toggle blue-layout-toggle-drawer" for="layout-drawer" title="@L["ToggleSidebar"]" role="button">
        <span class="btn blue-menu-item w-100 h-100 d-flex align-items-center justify-content-center p-0">
            <svg xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 16 16"
                 aria-hidden="true"
                 tabindex="-1"
                 width="1em"
                 height="1em"
                 fill="currentColor"
                 class="bi bi-layout-sidebar-inset">
                <path tabindex="-1" d="M14 2a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V3a1 1 0 0 1 1-1zM2 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2z"></path>
                <path tabindex="-1" d="M3 4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1z"></path>
            </svg>
        </span>
    </label>

    <header class="blue-layout-header"><LayoutHeader>@HeaderContent</LayoutHeader></header>

    <aside class="blue-layout-side blue-sidebar-state open h-100 overflow-y-auto overflow-x-hidden"
           style="color: var(--blue-sidebar-color); background: var(--blue-sidebar-bg);">
        @SideContent
    </aside>

    <main class="blue-layout-main"><LayoutMain NoPageBorder="@NoPageBorder">@PageContent</LayoutMain></main>

    <label aria-label="Close sidebar" for="layout-drawer" class="blue-layout-overlay bg-dark w-100 h-100" style="--bs-bg-opacity: 0.5;">
    </label>
</div>