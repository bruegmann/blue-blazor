@using Microsoft.Extensions.Localization
@namespace BlueBlazor.Components
@inherits BlueComponentBase
@inject IStringLocalizer<BlueBlazor.Resources.Phrases> L

@if (IsInSearch)
{
    <button type="button" class="@ClassValue" style="@StyleValue" data-value="@Value"
            data-description="@Description" data-selected="@(IsSelected ? "" : null)"
            @attributes="AdditionalAttributes">
        @if (ChildContent != null)
        {
            @ChildContent
        }
        else if (!string.IsNullOrEmpty(Description))
        {
            @Description
        }
        else
        {
            @Value
        }

        @if (!string.IsNullOrEmpty(Description))
        {
            <div class="ms-2 opacity-75 small">@Value</div>
        }

        @if (IsSelected)
        {
            <span class="ms-auto">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16" aria-hidden="true">
                    <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425z" />
                </svg>
                <span class="visually-hidden">@L["Selected"]</span>
            </span>
        }
    </button>
}