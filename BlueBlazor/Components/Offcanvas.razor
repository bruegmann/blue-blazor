@using Microsoft.Extensions.Localization
@using BlueBlazor.Components.DialogBaseParts
@inject IStringLocalizer<BlueBlazor.Resources.Phrases> L

@inherits DialogBase

<div style="display: contents" @onclick="Open">
    @ToggleContent
</div>

<dialog class="blue-modal modal" @ref="Element" id="@Id" aria-labelledby="@(Id + "-label")">
    <div class="@_offcanvasClass">
        <div class="offcanvas-header">
            <h1 class="offcanvas-title fs-5" id="@(Id + "-label")">@TitleText @TitleContent</h1>
            <form method="dialog" style="display: contents">
                <button type="submit" class="btn-close" aria-label="@L["Close"]"></button>
            </form>
        </div>
        <div class="@(new CssBuilder("offcanvas-body").AddClass(BodyClass))">
            @if (Render)
            {
                @BodyContent
            }
        </div>
    </div>
    <form method="dialog" class="blue-modal-backdrop">
        <button>@L["Close"]</button>
    </form>
</dialog>