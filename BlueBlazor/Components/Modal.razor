@using Microsoft.Extensions.Localization
@inject IStringLocalizer<BlueBlazor.Resources.Phrases> L

<div style="display: contents" @onclick="Open">
    @ToggleContent
</div>

<dialog class="modal" @ref="_element" id="@_id" aria-labelledby="@(_id + "-label")">
    <div class="@_dialogClass" style="transition: max-width .2s">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="@(_id + "-label")">@TitleText @TitleContent</h1>
                <form method="dialog" style="display: contents">
                    <button type="submit" class="btn-close" aria-label="@L["Close"]"></button>
                </form>
            </div>
            <div class="@(new CssBuilder("modal-body").AddClass(BodyClass))">
                @if (_render)
                {
                    @BodyContent
                }
            </div>

            @if (FooterContent != null)
            {
                <div class="modal-footer">
                    @if (_render)
                    {
                        @FooterContent
                    }
                </div>
            }
        </div>
    </div>
    <form method="dialog" class="blue-blazor-modal-backdrop">
        <button>@L["Close"]</button>
    </form>
</dialog>