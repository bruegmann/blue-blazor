@using Microsoft.Extensions.Localization
@namespace BlueBlazor.Components
@inherits BlueComponentBase
@inject IStringLocalizer<BlueBlazor.Resources.Phrases> L

<details @ref="_detailsRef" class="@ClassValue" style="@Style" open="@Open" @attributes="AdditionalAttributes">
    <summary class="@SummaryClassValue">
        @if (IconBefore != null)
        {
            <span class="blue-btn-icon-wrapper" aria-hidden="true">
                @IconBefore
            </span>
        }

        @if (LabelHidden)
        {
            <span class="visually-hidden">@Label</span>
        }
        else
        {
            @Label
        }

        @SummaryContent

        @if (IconAfter != null)
        {
            <span class="blue-btn-icon-wrapper" aria-hidden="true">
                @IconAfter
            </span>
        }

        <div class="blue-btn-icon-wrapper" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="@IconClassValue" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708"></path></svg>
        </div>
    </summary>

    <div class="@(!ResetChildClass ? "blue-collapse-indent vstack border-start" : null)">
        @ChildContent
    </div>
</details>